        {
            "name": "Register User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/x-www-form-urlencoded"
                    }
                ],
                "body": {
                    "mode": "urlencoded",
                    "urlencoded": [
                        {
                            "key": "username",
                            "value": "testuser123",
                            "description": "Username (required, min 3 characters, alphanumeric + underscore only)"
                        },
                        {
                            "key": "email",
                            "value": "testuser@example.com",
                            "description": "Email address (required, must be valid email)"
                        },
                        {
                            "key": "password",
                            "value": "password123",
                            "description": "Password (required, min 6 characters)"
                        }
                    ]
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/register",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "register"
                    ]
                },
                "description": "Register a new user account. Creates a new user and automatically logs them in."
            },
            "response": [
                {
                    "name": "Success - User Registered",
                    "status": "Found",
                    "code": 302,
                    "header": [
                        {
                            "key": "Location",
                            "value": "/characters"
                        },
                        {
                            "key": "Set-Cookie",
                            "value": "connect.sid=s%3A...; Path=/; HttpOnly"
                        }
                    ],
                    "_postman_previewlanguage": "html"
                },
                {
                    "name": "Validation Error - Username Too Short",
                    "status": "Bad Request",
                    "code": 400,
                    "header": [
                        {
                            "key": "Content-Type",
                            "value": "text/html; charset=utf-8"
                        }
                    ],
                    "body": "<!-- Registration form with error: Username must be at least 3 characters -->",
                    "_postman_previewlanguage": "html"
                },
                {
                    "name": "Validation Error - Invalid Characters",
                    "status": "Bad Request",
                    "code": 400,
                    "header": [
                        {
