<div class="dashboard-page">
  <h1 class="dashboard-title">MULTIVERSE ANALYTICS DASHBOARD</h1>

  {{#if session.userId}}
  <!-- LOGGED IN USER - Show all charts -->
  <div class="chart-wrapper">
    <iframe
      style="background:#FFFFFF;border:none;border-radius:6px;width:100%;height:650px;box-shadow:0 0 25px rgba(68,214,44,0.3);"
      src="https://charts.mongodb.com/charts-ite-5315-allstars-bcnnkys/embed/charts?id=25398740-218c-4074-a809-fc9254f576ac&maxDataAge=14400&theme=light&autoRefresh=true">
    </iframe>
  </div>
  <div class="chart-wrapper">
    <iframe style="background: #21313C;border: none;border-radius: 2px;box-shadow: 0 2px 10px 0 rgba(70, 76, 79, .2);"
      width="640" height="480"
      src="https://charts.mongodb.com/charts-ite-5315-allstars-bcnnkys/embed/charts?id=20f3d30d-a9bb-4d40-b3f8-0fb7ce38b0cd&maxDataAge=14400&theme=dark&autoRefresh=true"></iframe>
  </div>
  <div class="chart-wrapper">
    <iframe style="background: #21313C;border: none;border-radius: 2px;box-shadow: 0 2px 10px 0 rgba(70, 76, 79, .2);"
      width="640" height="480"
      src="https://charts.mongodb.com/charts-ite-5315-allstars-bcnnkys/embed/charts?id=8659c289-c7ad-4396-ad37-b072498afc06&maxDataAge=14400&theme=dark&autoRefresh=true"></iframe>
  </div>
  <div class="chart-wrapper">
    <iframe style="background: #21313C;border: none;border-radius: 2px;box-shadow: 0 2px 10px 0 rgba(70, 76, 79, .2);"
      width="640" height="480"
      src="https://charts.mongodb.com/charts-ite-5315-allstars-bcnnkys/embed/charts?id=a101748a-1b66-4a8b-ba68-9547906081d9&maxDataAge=14400&theme=dark&autoRefresh=true"></iframe>
  </div>
  {{else}}
  <!-- NOT LOGGED IN - Show premium message -->
  <div class="premium-message-container">
    <div class="premium-message-box">
      <div class="premium-icon"><img src="/images/access_denied.png" alt="Access Denied"></div>
      <h2 class="premium-title">Premium Feature</h2>
      <p class="premium-text">
        Access to the Multiverse Analytics Dashboard is a premium feature available only to registered users.
      </p>
      <p class="premium-subtext">
        Login or register to view detailed statistics and charts about characters, episodes, and locations across the
        multiverse.
      </p>
      <div class="premium-buttons">
        <a href="/auth/login" class="btn-cta-primary">Login</a>
        <a href="/auth/register" class="btn-cta-secondary">Register</a>
      </div>
    </div>
  </div>
  {{/if}}
</div>