<div class="list-container">
  <h1>{{title}}</h1>

  <div class="list-stats">
    <p>Total Locations: <strong>{{locations.length}}</strong></p>
  </div>

  <div class="list">
    {{#each locations}}
      <div class="list-card">
        <div class="list-header">
          <h2>{{this.name}}</h2>
          <span class="list-code">{{this.type}}</span>
        </div>

        <div class="list-details">
          <p><strong>Dimension:</strong> {{this.dimension}}</p>
          <p><strong>Residents:</strong> {{this.residents.length}}</p>
          <p><strong>Location ID:</strong> {{this.locationId}}</p>
        </div>

        <div class="list-actions">
          <a href="/locations/{{this.locationId}}" class="btn-view">View Details</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<div class="pagination-container">

  {{!-- FIRST PAGE --}}
  {{#if (gt currentPage 1)}}
    <a href="/locations?page=1" class="pagination-btn">« First</a>
  {{/if}}

  {{!-- PREVIOUS PAGE --}}
  {{#if (gt currentPage 1)}}
    <a href="/locations?page={{subtract currentPage 1}}" class="pagination-btn">‹ Prev</a>
  {{/if}}

  <span class="pagination-info">
    Page {{currentPage}} of {{totalPages}}
  </span>

  {{!-- NEXT PAGE --}}
  {{#if (lt currentPage totalPages)}}
    <a href="/locations?page={{add currentPage 1}}" class="pagination-btn">Next ›</a>
  {{/if}}

  {{!-- LAST PAGE --}}
  {{#if (lt currentPage totalPages)}}
    <a href="/locations?page={{totalPages}}" class="pagination-btn">Last »</a>
  {{/if}}

</div>

