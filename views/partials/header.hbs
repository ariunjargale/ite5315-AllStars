<header class="main-header">
  <div class="header-content">

    <div class="logo-section">
      <a href="/" class="title">Showrunner's CMS</a>
    </div>

    <nav class="main-nav">
      <ul>
        <li><a href="/characters" class="nav-link">Casting</a></li>
        <li><a href="/locations" class="nav-link">World Building</a></li>
        <li><a href="/episodes" class="nav-link">Storyline</a></li>
      </ul>
    </nav>

    <!-- AUTH BUTTONS -->
    <div class="auth-nav">
      {{#if session.userId}}
        <!-- USER LOGGED IN -->
        <span class="username-label">Hello, {{session.username}}!</span>
        <a href="/auth/logout" class="btn-login">Logout</a>
      {{else}}
        <!-- USER LOGGED OUT -->
        <a href="/auth/login" class="btn-login">Login</a>
        <a href="/auth/register" class="btn-register-header">Sign Up</a>
      {{/if}}
    </div>

  </div>
</header>